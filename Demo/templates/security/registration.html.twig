{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <br>
    <h1>Inscription</h1>
    {{ form_start(form) }}
    <br>
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur . . .' }}) }}
    {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adress email . . .' }}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe . . .' }}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Répéter votre mot de passe . . .' }}) }}

    <button type="submit" class="btn btn-success">S'inscrire</button>

    {{ form_end(form) }}

{% endblock %}